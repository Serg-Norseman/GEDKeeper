<local:CommonDialog
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:GKUI.Forms"
    x:Class="GKUI.Forms.AboutDlg"
    mc:Ignorable="d">

    <StackPanel Orientation="Vertical">
        <Image Source="/Assets/gk_logo.png" Stretch="None" />
        <TextBlock x:Name="lblProduct" FontSize="24" FontWeight="Bold" />
        <TextBlock x:Name="lblVersion" FontSize="20" FontWeight="SemiBold" />
        <TextBlock x:Name="lblCopyright" FontSize="20" FontWeight="SemiBold" />
        <Button x:Name="lblMail" Click="Hyperlink_Click">
            mailto:gedkeeper@yandex.ru
        </Button>
        <Button x:Name="lblProjSite" Click="Hyperlink_Click">
            https://gedkeeper.github.io/
        </Button>
        <Button x:Name="btnClose" Click="CancelClickHandler" />
    </StackPanel>

</local:CommonDialog>
