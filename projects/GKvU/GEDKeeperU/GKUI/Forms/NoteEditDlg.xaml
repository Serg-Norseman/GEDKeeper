<local:EditorDialog
    x:Class="GKUI.Forms.NoteEditDlg"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GKUI.Forms"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Orientation="Vertical" Spacing="10">
        <TextBox x:Name="txtNote" AcceptsReturn="True" TextWrapping="Wrap" Height="260" Width="400"
                 ScrollViewer.HorizontalScrollBarVisibility="Visible"
                 ScrollViewer.VerticalScrollBarVisibility="Visible"/>

        <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right">
            <Button x:Name="btnAccept" Click="btnAccept_Click" />
            <Button x:Name="btnCancel" Click="CancelClickHandler" />
        </StackPanel>
    </StackPanel>
</local:EditorDialog>
